<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zx.dao.RuleMapper" >
  <select id="getAllRule" resultType="com.zx.pojo.Rule">
    select * FROM rule
  </select>
  <update id="updateRule">
      UPDATE rule SET value = #{1} WHERE ruleId = #{0}
  </update>
</mapper>